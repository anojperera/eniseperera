---
import ProjectLayout from "../../../layouts/ProjectLayout.astro";
import TimeLineElement from "../../../components/cv/TimeLine.astro";
import { ProjectProps } from "../../../interfaces/ProjectProps.astro";

export const props: ProjectProps = {
  title: "Spring Music",
  description: "I wrote this piece to celebrate beautiful Spring",
  pubDate: "2022-03-01",
  updatedDate: "2022-03-01",
  heroImage: "/images/spring.jpeg",
  credit:
    "https://unsplash.com/@aniket940518?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyTexti",
};
---

<ProjectLayout
  title={props.title}
  description={props.description}
  pubDate={props.pubDate}
  updatedDate={props.updatedDate}
  heroImage={props.heroImage}
  credit={props.credit}
>
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Journey</div>
  </div>
  <div class="mb-10 text-justify">
    I am trying to describe the process of creating music.
  </div>
  <div class="time-line-container mb-10">
    <TimeLineElement
      title="Thought"
      subtitle=""
      desc="I looked outside the window and saw a butterfy inspecting the flowers."
    />
    <TimeLineElement
      title="Rhythem"
      subtitle=""
      desc="It seemed so frantic as if the something is going to happen soon that the butterfly needed the necter."
    />
    <TimeLineElement
      title="Action"
      subtitle=""
      desc="I sat down and start playing a tune a which I thought would reflect what I was observing through the window."
    />
  </div>
  <div id="paper"></div>
  <div id="audio"></div>

  <script>
    import "./scripts/spring.js";
  </script>
</ProjectLayout>
