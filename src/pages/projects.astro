---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Music</div>
  </div>

  <HorizontalCard
    title="Spring"
    img="/project-music.jpeg"
    desc="I wrote this piece to celebrate beutiful Spring."
    url="/projects/music/project-1"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Autumn"
    img="autumn.jpeg"
    desc="With this tune brings us amazing Autumn."
    url="/projects/music/project-2"
    credit="https://unsplash.com/photos/O6N9RV2rzX8?utm_source=unsplash&utm_medium=referral&utm_content=creditShareLink"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Photography</div>
  </div>

  <HorizontalCard
    title="Nature"
    img="/project-music.jpeg"
    desc="I try to capture the nature around us."
    url="#"
    badge="PHOTO"
  />
</BaseLayout>
